---
import { Image } from 'astro:assets';
import photoProfile from '../assets/images/avatar-jessica.jpeg'
import '../styles/style.css'

const green = 'hsl(75, 94%, 57%)'
const white = 'hsl(0, 0%, 100%)'
const grey700 = 'hsl(0, 0%, 20%)'
const grey800 = 'hsl(0, 0%, 12%)'
const grey900 = 'hsl(0, 0%, 8%)'
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
	<title>Frontend mentor | Social-links-profile</title>
</head>
<body>
	<section class="main-container">
		<div>
			<Image src={photoProfile} alt="photo-profile"/>
		</div>
		<h1>Jessica Randall</h1>
		<h2>London, United Kingdom</h2>
		<p>"Front-end developer and avid reader."</p>

		<button>GitHub</button>
		<button>Fronted Mentor</button>
		<button>LinkedIn</button>
		<button>Twitter</button>
		<button>Instagram</button>
	</section>
</body>
</html>

<style define:vars={{green, white, grey700, grey800, grey900}}>
	body{
		display: grid;
		place-content: center;
		height: 100vh;
		padding: 24px;
  	margin: 0px;
		font-family: "Inter", serif;
		background-color: var(--grey900);
		color: var(--white);
	}

	.main-container {
		display: flex;
		flex: 1;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		max-width: 456px;
		padding: 24px;
		background-color: var(--grey800);
		border-radius: 12px;
	}

	.main-container div {
		width: 88px;
		height: 88px;
	}

	.main-container div img {
		width: 100%;
		height: 100%;
		border-radius: 100%;
	}

	.main-container h1 {
		margin: 24px 0 10px;
		font-size: 28px;
		font-weight: 500;
	}

	.main-container h2 {
		margin: 0;
		font-size: 16px;
		font-weight: 700;
		color: var(--green)
	}

	.main-container p {
		margin: 28px 0;
		font-size: 15px;
	}

	.main-container button {
		width: 100%;
		height: 50px;
		margin-bottom: 16px;
		font-family: "Inter", serif;
		font-size: 16px;
		font-weight: bold;
		background-color: var(--grey700);
		color: var(--white);
		border: none;
		border-radius: 8px;
	}

	.main-container button:last-child() {
		margin-bottom: 0;
	}

	.main-container button:hover {
		background-color: var(--green);
		color: var(--grey700);
		cursor: pointer;
	}

	@media screen and (min-width: 767px) {
		.main-container {
			width: 456px;
		}
	}
</style>